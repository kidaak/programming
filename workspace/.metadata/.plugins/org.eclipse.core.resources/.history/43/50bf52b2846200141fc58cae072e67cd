package custom.zk.components;

import java.io.IOException;

import org.zkoss.zk.ui.event.Events;
import org.zkoss.zk.ui.sys.ContentRenderer;
import org.zkoss.zul.impl.XulElement;

public class SimpleLabel extends XulElement {

	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;

	private String _value = "";
	private boolean _cleared = false;

	static {
		addClientEvent(SimpleLabel.class, ClearEvent.NAME, CE_IMPORTANT);
	}

	public String getValue() {
		return _value;
	}

	public void setValue(String value) {
		if (!this._value.equals(value)) {
			this._value = value;
			smartUpdate("value", _value);
		}
	}

	@Override
	protected void renderProperties(ContentRenderer arg0) throws IOException {
		super.renderProperties(arg0);
		render(arg0, "value", _value);
	}

	public void service(org.zkoss.zk.au.AuRequest request, boolean everError) {
		final String cmd = request.getCommand();

		if (cmd.equals(ClearEvent.NAME)) {
			ClearEvent evt = ClearEvent.getClearEvent(request);
			_cleared = evt.getCleared();
			Events.postEvent(evt);
		} else
			super.service(request, everError);
	}

	public boolean is_cleared() {
		return _cleared;
	}

	public void set_cleared(boolean _cleared) {
		this._cleared = _cleared;
	}

}
