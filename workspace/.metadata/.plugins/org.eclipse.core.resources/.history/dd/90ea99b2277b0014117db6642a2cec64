<?page title="PDF download" contentType="text/html;charset=UTF-8"?>
<zk>
	<window title="PDF download" border="normal">
		<button label="Download">
			<attribute name="onClick">
	{
		java.io.InputStream is = desktop.getWebApp().getResourceAsStream(
				"/test/download.html");
		if (is != null)
			Filedownload.save(is, "text/html", "download.html");
		else
			alert("/test/download.html not found");
	}
</attribute>
		</button>
	</window>
</zk>